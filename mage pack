local function optimizePerformance()
    local settings = game:GetService("Workspace").CurrentCamera
    settings.FieldOfView = 70

    local lighting = game:GetService("Lighting")
    lighting.GlobalShadows = false
    lighting.FogEnd = 9e9
    lighting.Brightness = 1

    game:GetService("ContentProvider"):SetThreadPool(1)
    game:GetService("UserSettings").GameSettings.MasterVolume = 0

    settings:ClearAllChildren()

    local function disableTextures()
        for _, desc in ipairs(workspace:GetDescendants()) do
            if desc:IsA("Texture") or desc:IsA("Decal") or desc:IsA("MeshPart") then
                desc.Transparency = 1
            elseif desc:IsA("BasePart") then
                desc.Material = Enum.Material.SmoothPlastic
            end
        end
    end

    local function reduceQuality()
        settings.RenderFidelity = Enum.RenderFidelity.Performance
        settings.LevelOfDetail = Enum.LevelOfDetailSetting.Low
        game:GetService("UserSettings").GameSettings.SavedQualityLevel = Enum.SavedQualitySetting.Low
    end

    reduceQuality()
    disableTextures()
end

optimizePerformance()

print("FPS optimization script successfully executed!")
